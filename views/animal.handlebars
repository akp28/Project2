  <!-- Search -->
    <center id="top-bar">
      <form role="search" method="get" id="searchform" class="searchform" action="/">
        <div class="searchbar">
          <input class="search_input" type="text" name="" placeholder="Search for Animals...">
          <a href="#" class="search_icon"><i class="fas fa-search"></i></a>
        </div>
      </form>
    </center>
    <strong><h1 id="user-font">Welcome, {{user.userinfo.given_name }}</h1></strong>
    <a href="/logout" id="log-out"> Logout</a>
  </nav>
      
    <div class="container-fluid text-center">  
      <div class="row content" id="animal-banner">
        <img src="/assets/animalbannerthin.png" alt="">
      </div> 
      <div class="row content" id="red-line"></div> 
      <div class="row content">
        <div class="col-md-2 sidenav">
          <div>
            <p id="favorite-header">{{user.userinfo.given_name }}'s Favorite Animals</p>
            <hr>
          </div>
        </div>
        <div class="col-sm-8 text-left"> 
            <div id="wings">
                <h1 id="animal-header">Animal Search Results</h1>
                <p id="page-text"></p>
                <hr>
                <ul id="animal-results">
                  <li id="common">Name: {{animal.animal_name_common}}</li>
                  <li id="scientific">Scientific Name: {{animal.animal_name_scientific}}</li>
                  <li id="threat-level">Threat Level: {{animal.threat}}</li>
                  <li id="population">Population: {{animal.pop}}</li>
                  <li id="max-weight">Max Weight: {{animal.max_weight}}</li>
                  <li id=>Habitat: {{animal.habitat}}</li>
                  <li>{{animal.info}}</li>
                </ul>
            </div>
        </div>
      </div>
    </div>
</div> 

