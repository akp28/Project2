<div id="animal-container" id="animal-page">
  <nav class="navbar navbar-expand-sm sticky-top" id="navbar">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav-content" aria-controls="nav-content" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

  <!-- Brand -->
  <img src="/assets/hourglass_small.png" id="hourglass-small" alt="logo icon">
   <h1 class="navbar-brand">Project Condor</h1>

  <div class="collapse navbar-collapse" id="nav-content">   

  <!-- Search -->
    <center id="top-bar">
      <form id="myForm">
        <input id="textInput" type="text"></input>
        <input id="submit-btn" type="submit"></input>
      </form>
    </center>
   
    <strong><h1 id="user-font">Welcome, {{userCon.userinfo.given_name }}</h1></strong>
    <a href="/logout" id="log-out"> Logout</a>
  </nav>
      
    <div class="container-fluid text-center">  
      <div class="row content" id="animal-banner">
        <img src="/assets/animalbannerthin.png" alt="">
      </div> 
      <div class="row content" id="red-line"></div> 
      <div class="row content">
        <div class="col-md-2 sidenav">
          <div>
            <p id="favorite-header">{{userCon.userinfo.preferred_username }}'s Favorite Animals</p>
            <hr>
          </div>
        </div>
        <div class="col-sm-8 text-left"> 
            <div id="wings">
                <h1 id="animal-header">Animal Search Results</h1>
                <p id="page-text"></p>
                <hr>
                <ul id="animal-results">
                  {{#each animal}}
                  <li id="common">{{animal_name_common}}</li>
                  <li id="scientific">{{animal_name_scientific}}</li>
                  <li id="threat-level">Threat Level: {{threat}}</li>
                  <li id="population">Population: {{pop}} individuals</li>
                  <li id="max-weight">Max Weight: {{max_weight}} pounds</li>
                  <li id="habitat">Habitat: {{habitat}}</li>
                  <li id="info">{{info}}</li>
                  <br>
                  <hr>
                  {{/each}}
                </ul>
            </div>
        </div>
      </div>
    </div>
</div> 

<footer class="container-fluid text-center">
  <p>Project Condor Â© 2019</p>
</footer
